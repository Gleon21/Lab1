            <label for="Nota par1"></label>
            <br>

            <input type="text" name="par1" required placeholder="Ingresa tu nota P1">
            <br>

            <label for="Nota par2"></label>
            <br>
            <input type="text" name="par2" required placeholder="Ingresa tu nota P2">
            <br>

            <label for="Nota par3"></label>
            <br>
            <input type="text" name="par3" required placeholder="Ingresa tu nota P3">
