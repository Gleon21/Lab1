
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="p-3 mb-2 bg-primary text-white" >Registro</h2>
<style>
h2{
    text-shadow:1px 1px 7px black
}
</style>

<body>

