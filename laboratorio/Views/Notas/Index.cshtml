            <br>
            <input type="text" name="lab2" required placeholder="Ingresa tu nota L2">
            <br>

            <label for="Nota lab3"></label>
            <br>
            <input type="text" name="lab3" required placeholder="Ingresa tu nota L3">
            <br>


